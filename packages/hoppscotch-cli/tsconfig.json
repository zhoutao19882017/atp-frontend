{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "files": ["package.json"]
}
